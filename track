        <!-- Chapter Update Modal (Simple) -->
        <div id="updateModal" class="fixed inset-0 bg-gray-900 bg-opacity-90 hidden items-center justify-center p-4 z-50">
            <div class="bg-gray-800 p-6 rounded-xl shadow-2xl w-full max-w-sm border border-red-600">
                <h3 class="text-xl font-bold mb-4 text-red-500">Manual Progress Update</h3>
                <form id="updateProgressForm" onsubmit="event.preventDefault(); handleUpdateSubmit()">
                    <input type="hidden" id="modalBookId">
                    <label for="newChaptersRead" class="block text-sm font-medium text-gray-300 mb-2" id="modalLabel">New Units Read</label>
                    <input type="number" id="newChaptersRead" required class="w-full p-3 border border-gray-600 rounded-lg focus:ring-red-500 focus:border-red-500 bg-gray-700 text-gray-100 mb-4">
                    
                    <div class="flex justify-end space-x-3">
                        <button type="button" onclick="closeModal()" class="px-4 py-2 text-sm font-medium text-gray-300 bg-gray-700 rounded-lg hover:bg-gray-600 transition">Cancel</button>
