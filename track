    <!-- Firebase Imports -->
    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-app.js";
        import { getAuth, signInAnonymously, signInWithCustomToken, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-auth.js";
        import { getFirestore, doc, addDoc, setDoc, onSnapshot, collection, updateDoc, deleteDoc, deleteField, getDoc } from "https://www.gstatic.com/firebasejs/11.6.1/firebase-firestore.js";
        
        // Wrap all logic in an IIFE to safely use 'return' for early exit
        (async () => {
            let db;
            let auth;
            let userId = null;
            let app;
            let lastActiveBookId = null;
            const loadingMessage = document.getElementById('loadingMessage');

            // =========================================================================
            // Configuration Variables (Ensures runnable code outside of canvas)
            // If deploying to Vercel/GitHub, you MUST configure environment variables 
            // for the Firebase config to be injected, or replace DUMMY_... values.
            // =========================================================================
            const appId = typeof __app_id !== 'undefined' ? __app_id : 'default-infinity-tracker-app';
            const firebaseConfig = typeof __firebase_config !== 'undefined' ? JSON.parse(__firebase_config) : { 
                apiKey: 'DUMMY_API_KEY_REPLACE_ME', 
                authDomain: 'DUMMY_AUTH_DOMAIN_REPLACE_ME', 
                projectId: 'DUMMY_PROJECT_ID_REPLACE_ME' 
            };
            const initialAuthToken = typeof __initial_auth_token !== 'undefined' ? __initial_auth_token : null;
            const METADATA_DOC_ID = '_metadata'; 
            // =========================================================================

            // 1. Initialize Firebase
            try {
                app = initializeApp(firebaseConfig);
                db = getFirestore(app);
                auth = getAuth(app);
                // Set the log level for debugging if needed (remove in production)
                // setLogLevel('Debug');
                await authenticate();
            } catch (e) {
                console.error("Failed to initialize Firebase:", e);
                if (loadingMessage) {
                    loadingMessage.textContent = "ERROR: Failed to initialize Firebase. Check API keys.";
                }
                return; // Exit the IIFE if initialization fails
            }

            // 2. Authentication
            async function authenticate() {
                try {
                    if (initialAuthToken) {
                        // Use the provided custom token for seamless sign-in
                        await signInWithCustomToken(auth, initialAuthToken);
                    } else {
                        // Fallback to anonymous sign-in for users without a token (like on Vercel)
                        await signInAnonymously(auth);
                    }
                } catch (error) {
                    console.error("Authentication failed:", error);
                    if (loadingMessage) {
                        loadingMessage.textContent = "ERROR: Authentication failed.";
                    }
                }
            }

            // 3. Firestore References and State
            function getBooksCollectionRef(uid) {
                // Private data path: /artifacts/{appId}/users/{userId}/books
                return collection(db, `artifacts/${appId}/users/${uid}/books`);
            }
            
            function getMetadataDocRef(uid) {
                return doc(getBooksCollectionRef(uid), METADATA_DOC_ID);
            }
            
            function getRecommendationsCollectionRef() {
                // Public data path: /artifacts/{appId}/public/data/recommendations
                return collection(db, `artifacts/${appId}/public/data/recommendations`);
            }
            
            async function setLastActiveBook(bookId) {
                if (!userId) return;
                lastActiveBookId = bookId; 
                try {
                    await setDoc(getMetadataDocRef(userId), { lastActiveBookId: bookId }, { merge: true });
                } catch (error) {
                    console.error("Error setting last active book ID:", error);
                }
            }

            // 4. Setup Real-time Listeners
            function setupRealtimeListener(uid) {
                const booksRef = getBooksCollectionRef(uid);
                const metadataRef = getMetadataDocRef(uid);

                // Listener for PERSONAL TRACKING LIST
                onSnapshot(booksRef, (snapshot) => {
                    const books = [];
                    snapshot.forEach(doc => {
                        if (doc.id !== METADATA_DOC_ID) {
                            books.push({ id: doc.id, ...doc.data() });
                        }
                    });
                    renderBooks(books, lastActiveBookId);
                }, (error) => {
                    console.error("Error setting up books snapshot listener:", error);
                    if (loadingMessage) {
                         loadingMessage.textContent = "ERROR: Could not load your progress list.";
                    }
                });
                
                // Listener for ACTIVE BOOK METADATA
                onSnapshot(metadataRef, (docSnapshot) => {
                    if (docSnapshot.exists()) {
                        const metadata = docSnapshot.data();
                        lastActiveBookId = metadata.lastActiveBookId || null;
                    }
                }, (error) => {
                    console.error("Error setting up metadata snapshot listener:", error);
                });
                
                // Listener for COMMUNITY RECOMMENDATIONS
                setupRecommendationsListener(uid);
            }
            
            // Listener for Recommendations
            function setupRecommendationsListener(uid) {
                const recRef = getRecommendationsCollectionRef();

                onSnapshot(recRef, (snapshot) => {
                    const recommendations = [];
                    snapshot.forEach(doc => {
                        recommendations.push({ id: doc.id, ...doc.data() });
                    });
                    renderRecommendations(recommendations, uid);
                }, (error) => {
                    console.error("Error setting up recommendations snapshot listener:", error);
                    const recLoading = document.getElementById('recommendationsLoading');
                    if (recLoading) {
                         recLoading.textContent = "ERROR: Could not load community recommendations.";
                    }
                });
            }
            
            // 5. Rendering Logic
            function getUnitLabels(contentType) {
                if (contentType === 'anime') {
                    return { total: 'Episodes', current: 'Episode' };
                }
                // Includes 'novel', 'manga', 'manhua', 'manhwa'
                return { total: 'Chapters', current: 'Chapter' };
            }

            function renderBooks(books, activeId) {
                const booksList = document.getElementById('booksList');
                
                if (loadingMessage) {
                    loadingMessage.classList.add('hidden');
                }

                booksList.innerHTML = '';

                if (books.length === 0) {
                    booksList.innerHTML = '<p class="text-center text-gray-500 p-8 border border-dashed border-gray-600 rounded-xl">No titles tracked yet. Add one above!</p>';
                    return;
                }

                // Sort active book to the top, and then by progress
                books.sort((a, b) => {
                    if (a.id === activeId) return -1; 
                    if (b.id === activeId) return 1;  
                    
                    // Use chaptersRead for sorting
                    const percentA = (a.chaptersRead / a.totalChapters) * 100;
                    const percentB = (b.chaptersRead / b.totalChapters) * 100;
                    return percentA - percentB; 
                });

                books.forEach(book => {
                    const labels = getUnitLabels(book.contentType);
                    
                    // Determine which chapters value to use for display
                    const displayChaptersRead = book.pendingChaptersRead !== undefined ? book.pendingChaptersRead : book.chaptersRead;
                    const hasPendingChange = book.pendingChaptersRead !== undefined;

                    const percent = Math.min(100, Math.round((displayChaptersRead / book.totalChapters) * 100));
                    const isComplete = percent >= 100;
                    
                    // Red/Black/White progress color scheme
                    let progressColor;
                    if (isComplete) {
                        progressColor = 'bg-green-500'; 
                    } else if (percent > 75) {
                        progressColor = 'bg-red-600';
                    } else if (percent > 40) {
                        progressColor = 'bg-red-400';
                    } else {
                        progressColor = 'bg-red-200';
                    }

                    const isCurrentlyReading = book.id === activeId && !isComplete && !hasPendingChange; 
                    const isDraft = hasPendingChange;

                    const cardBorderColor = isComplete ? 'border-green-500' : (isDraft ? 'border-yellow-400' : 'border-red-600');
                    
                    const bookCard = document.createElement('div');
                    bookCard.className = `card p-6 rounded-xl shadow-lg border-l-4 ${cardBorderColor}`;
                    
                    const ribbonHtml = isCurrentlyReading 
                        ? '<div class="ribbon">Currently Active</div>'
                        : '';

                    // Build action buttons
                    let actionButtons;

                    // If there is a pending change, show confirm/edit buttons
                    if (hasPendingChange) {
                        actionButtons = `
                            <button onclick="window.confirmPendingChapters('${book.id}')" class="text-sm px-4 py-2 btn-confirm text-white rounded-full hover:bg-emerald-700 transition font-bold shadow-md shadow-emerald-900/50">
                                <i class="fas fa-check mr-1"></i> Confirm & Save
                            </button>
                            <button onclick="window.openUpdateModal('${book.id}', ${book.pendingChaptersRead}, '${labels.current}')" class="text-sm px-3 py-1 bg-gray-600 text-gray-200 rounded-full hover:bg-gray-500 transition">
                                <i class="fas fa-edit"></i> Edit Draft
                            </button>
                        `;
                    } else {
                        // If no pending change, show Quick Advance and Update modal
                        actionButtons = `
                            <button onclick="window.quickAdvance('${book.id}', ${book.chaptersRead}, ${book.totalChapters})" class="text-sm px-3 py-2 quick-advance rounded-full shadow-md shadow-red-900/50">
                                <i class="fas fa-arrow-alt-circle-right mr-1"></i> +1 ${labels.current}
                            </button>
                            <button onclick="window.openUpdateModal('${book.id}', ${book.chaptersRead}, '${labels.current}')" class="text-sm px-3 py-2 bg-gray-600 text-gray-200 rounded-full hover:bg-gray-500 transition">
                                <i class="fas fa-pencil-alt"></i> Manual Update
                            </button>
                        `;
                    }
                    
                    // Always show delete button separately
                    actionButtons += `
                        <button onclick="window.deleteBook('${book.id}')" class="text-sm px-3 py-2 bg-gray-800 text-red-500 rounded-full hover:bg-gray-700 transition ml-2 border border-red-500/50">
                            <i class="fas fa-trash"></i>
                        </button>
                    `;


                    bookCard.innerHTML = `
                        ${ribbonHtml}
                        <div class="flex justify-between items-start mb-3">
                            <h3 class="text-xl font-bold text-gray-100">${book.title} ${isDraft ? '<span class="draft-badge">DRAFT</span>' : ''}</h3>
                        </div>
                        
                        <p class="text-gray-400 text-sm mb-2">
                            Total ${labels.total}: ${book.totalChapters}
                        </p>
                        <p class="text-gray-200 text-base mb-4 font-medium">
                            Current ${labels.current}: ${book.chaptersRead}
                            ${isDraft ? `<span class="text-yellow-400 font-semibold ml-2">(Draft: ${book.pendingChaptersRead})</span>` : ''}
                        </p>

                        <!-- Progress Bar -->
                        <div class="w-full bg-gray-600 rounded-full h-2.5 mb-2">
                            <div class="h-2.5 rounded-full ${progressColor}" style="width: ${percent}%;"></div>
                        </div>
                        <div class="text-right text-sm font-bold ${isComplete ? 'text-green-400' : 'text-red-400'}">
                            ${percent}% Complete
                        </div>
                        ${isComplete ? '<p class="mt-2 text-center text-green-400 font-bold">âœ… STATUS: COMPLETED! âœ…</p>' : ''}
                        
                        <div class="mt-4 pt-4 border-t border-gray-600 flex flex-wrap gap-2 justify-end">
                            ${actionButtons}
                        </div>
                    `;
                    booksList.appendChild(bookCard);
                });
            }
            
            // Rendering Logic for Recommendations
            function renderRecommendations(recommendations, currentUserId) {
                const recList = document.getElementById('recommendationsList');
                const recLoading = document.getElementById('recommendationsLoading');

                if (recLoading) recLoading.classList.add('hidden');
                recList.innerHTML = '';
                
                if (recommendations.length === 0) {
                    recList.innerHTML = '<p class="text-center text-gray-500 p-8 border border-dashed border-gray-600 rounded-xl">Be the first to share a recommendation!</p>';
                    return;
                }

                recommendations.sort((a, b) => b.createdAt - a.createdAt); // Sort newest first

                recommendations.forEach(rec => {
                    const isOwner = rec.submittedBy === currentUserId;
                    const deleteButton = isOwner ? 
                        `<button onclick="window.deleteRecommendation('${rec.id}')" class="text-sm ml-3 text-red-400 hover:text-red-500 transition"><i class="fas fa-trash"></i> Delete</button>`
                        : '';
                    
                    const linkHtml = rec.link && rec.link.startsWith('http') ? 
                        `<a href="${rec.link}" target="_blank" class="font-medium text-sm hover:underline text-red-400 ml-3"><i class="fas fa-external-link-alt"></i> Link</a>`
                        : '';
                        
                    const recCard = document.createElement('div');
                    recCard.className = `recommendation-card p-4 rounded-xl shadow-lg flex justify-between items-start border-l-4 ${isOwner ? 'border-red-600' : 'border-yellow-400'}`;
                    
                    recCard.innerHTML = `
                        <div>
                            <div class="flex flex-wrap items-center mb-1">
                                <span class="px-2 py-0.5 text-xs font-semibold rounded bg-gray-700 text-yellow-400 mr-2 mb-1">${rec.type}</span>
                                <h3 class="font-bold text-lg text-gray-100">${rec.title}</h3>
                            </div>
                            <p class="text-sm text-gray-400 mb-2 italic leading-relaxed">"${rec.reason}"</p>
                            <div class="flex flex-wrap items-center text-xs text-gray-500 mt-2">
                                <span class="mr-3">Shared by: ${rec.submittedBy.substring(0, 8)}...</span>
                                ${linkHtml}
                            </div>
                        </div>
                        <div class="flex flex-col items-end pt-1">
                            ${deleteButton}
                        </div>
                    `;
                    recList.appendChild(recCard);
                });
            }
            
            // 6. CRUD Operations
            
            // A. Add Book
            document.getElementById('addBookForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                if (!userId) {
                    console.error("User not authenticated.");
                    return;
                }

                const title = document.getElementById('title').value.trim();
                const totalChapters = parseInt(document.getElementById('totalChaptersInput').value);
                const chaptersRead = parseInt(document.getElementById('chaptersReadInput').value);
                const contentType = document.querySelector('input[name="contentType"]:checked').value;
                
                if (title === "" || totalChapters <= 0 || chaptersRead < 0 || chaptersRead > totalChapters) {
                    console.error("Invalid input values.");
                    return;
                }

                try {
                    const booksRef = getBooksCollectionRef(userId);
                    const newDocRef = await addDoc(booksRef, {
                        title: title,
                        totalChapters: totalChapters, 
                        chaptersRead: chaptersRead,   
                        contentType: contentType,     
                        createdAt: Date.now()
                    });
                    
                    // Automatically set as active if not complete
                    if (chaptersRead < totalChapters) {
                        await setLastActiveBook(newDocRef.id);
                    }

                    document.getElementById('addBookForm').reset();
                    document.getElementById('typeNovel').checked = true; // Reset radio button
                } catch (error) {
                    console.error("Error adding document:", error);
                }
            });
            
            // B. Add Recommendation
            document.getElementById('addRecommendationForm').addEventListener('submit', async (e) => {
                e.preventDefault();
                if (!userId) {
                    console.error("User not authenticated. Cannot submit recommendation.");
                    return;
                }

                const title = document.getElementById('recTitle').value.trim();
                const type = document.getElementById('recType').value;
                const link = document.getElementById('recLink').value.trim();
                const reason = document.getElementById('recReason').value.trim();
                
                if (title === "" || type === "" || reason === "") {
                    console.error("Please fill out all required fields for recommendation.");
                    return;
                }

                try {
                    const recRef = getRecommendationsCollectionRef();
                    await addDoc(recRef, {
                        title: title,
                        type: type, 
                        link: link,
                        reason: reason,
                        submittedBy: userId,
                        createdAt: Date.now()
                    });
                    
                    document.getElementById('addRecommendationForm').reset();
                    document.getElementById('recType').value = ''; // Reset dropdown to placeholder
                } catch (error) {
                    console.error("Error adding recommendation:", error);
                }
            });
            
            // C. Delete Recommendation
            window.deleteRecommendation = async (recId) => {
                if (!userId) return;
                
                try {
                    const recDocRef = doc(getRecommendationsCollectionRef(), recId);
                    
                    // Check ownership before deleting (Security rule verification)
                    const docSnapshot = await getDoc(recDocRef);
                    if (docSnapshot.exists() && docSnapshot.data().submittedBy === userId) {
                         await deleteDoc(recDocRef);
                         console.log(`Recommendation ${recId} deleted.`);
                    } else {
                         console.warn("Attempted to delete a recommendation not owned by user or doc doesn't exist. This action is blocked.");
                    }

                } catch (error) {
                    console.error("Error deleting recommendation:", error);
                }
            };

            // D. Update Chapters (Saves to DRAFT/Pending)
            window.handleUpdateSubmit = async () => {
                const bookId = document.getElementById('modalBookId').value;
                const newChapters = parseInt(document.getElementById('newChaptersRead').value);
                closeModal();

                if (!userId || !bookId) return;

                try {
                    const booksRef = getBooksCollectionRef(userId);
                    const bookDocRef = doc(booksRef, bookId);
                    
                    // Update ONLY the pendingChaptersRead field
                    await updateDoc(bookDocRef, {
                        pendingChaptersRead: newChapters 
                    });

                } catch (error) {
                    console.error("Error saving pending progress:", error);
                }
            };

            // E. Quick Advance (+1 Chapter)
            window.quickAdvance = async (bookId, currentChapters, totalChapters) => {
                if (!userId) return;
                const nextChapter = Math.min(totalChapters, currentChapters + 1);
                
                if (nextChapter === currentChapters) {
                    // Do nothing if already at max
                    return;
                }

                try {
                    const booksRef = getBooksCollectionRef(userId);
                    const bookDocRef = doc(booksRef, bookId);

                    // Update ONLY the pendingChaptersRead field with the next chapter number
                    await updateDoc(bookDocRef, {
                        pendingChaptersRead: nextChapter
                    });
                    
                    console.log(`Draft saved: Advanced ${bookId} to unit ${nextChapter}.`);

                } catch (error) {
                    console.error("Error saving quick advance draft:", error);
                }
            }


            // F. Confirm Pending Changes
            window.confirmPendingChapters = async (bookId) => {
                if (!userId) return;
                console.log(`Confirming pending changes for book: ${bookId}`);

                try {
                    const booksRef = getBooksCollectionRef(userId);
                    const bookDocRef = doc(booksRef, bookId);

                    // 1. Get the current document to read the pending value
                    const docSnapshot = await getDoc(bookDocRef);
                    const bookData = docSnapshot.data();
                    const confirmedChapters = bookData.pendingChaptersRead;

                    if (confirmedChapters === undefined) {
                        console.error("No pending changes found to confirm.");
                        return;
                    }

                    // 2. Update chaptersRead with the confirmed value and remove pendingChaptersRead
                    await updateDoc(bookDocRef, {
                        chaptersRead: confirmedChapters, 
                        pendingChaptersRead: deleteField() 
                    });
                    
                    // 3. Set this book as the last active one (only if not complete)
                    if (confirmedChapters < bookData.totalChapters) {
                        await setLastActiveBook(bookId);
                    } else {
                        await setLastActiveBook(null); // Clear active if finished
                    }
                    
                } catch (error) {
                    console.error("Error confirming pending changes:", error);
                }
            };


            // G. Delete Book
            window.deleteBook = async (bookId) => {
                if (!userId) return;
                console.warn(`Deleting book: ${bookId}.`);
                
                try {
                    const bookDocRef = doc(getBooksCollectionRef(userId), bookId);
                    await deleteDoc(bookDocRef);
                    
                    if (bookId === lastActiveBookId) {
                        await setLastActiveBook(null);
                    }
                } catch (error) {
                    console.error("Error deleting document:", error);
                }
            };

            // 7. Modal Control
            const updateModal = document.getElementById('updateModal');
            const newChaptersReadInput = document.getElementById('newChaptersRead'); 
            const modalLabel = document.getElementById('modalLabel');
            
            window.openUpdateModal = async (bookId, currentDisplayChapters, unitLabel) => {
                document.getElementById('modalBookId').value = bookId;
                
                // Set the modal input value to the currently displayed chapter count
                newChaptersReadInput.value = currentDisplayChapters;
                modalLabel.textContent = `New ${unitLabel}s Read (Draft Value)`;
                
                updateModal.classList.remove('hidden');
                updateModal.classList.add('flex');
            };

            window.closeModal = () => {
                updateModal.classList.add('hidden');
                updateModal.classList.remove('flex');
            };

            // 8. Auth State Listener
            onAuthStateChanged(auth, (user) => {
                if (user) {
                    userId = user.uid;
                    document.getElementById('user-id-display').textContent = `User ID: ${userId}`;
                    setupRealtimeListener(userId);
                } else {
                    console.log("User is signed out.");
                }
            });

        })(); // End of IIFE
        
    </script>
    <script>
        // Placeholder for font awesome for icons
        (function() {
          const link = document.createElement('link');
          link.href = 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css';
          link.rel = 'stylesheet';
          document.head.appendChild(link);
        })();
    </script>
</body>
</html>
